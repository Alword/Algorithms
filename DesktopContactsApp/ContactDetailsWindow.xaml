<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailWindow" Height="300" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBox Margin="0,0,0,5" x:Name="NameTextBox" />
            <TextBox Margin="0,0,0,5" x:Name="EmailTextBox"/>
            <TextBox Margin="0,0,0,5" x:Name="PhoneNameTextBox"/>
            <Button Content="Update" Margin="0,0,0,5" Click="UpdateButton_OnClick" />
            <Button Content="Delete"  Margin="0,0,0,5" Background="Red" Click="DeleteButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
